<%= form_with model: call, local: true, html: {class: 'ui form'} do |form| %>

  <% if call.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(call.errors.count, "error") %> prohibited this call from being saved:</h2>

      <ul>
        <% call.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :origin, 'Origem' %>
    <%= form.select :origin, collection: [['011', '011'], ['016', '016'], ['017', '017'], ['018', '018']] %>
  </div>

  <div class="field">
    <%= form.label :destiny, 'Destino' %>
    <%= form.select :destiny, collection: [['011', '011'], ['016', '016'], ['017', '017'], ['018', '018']] %>
  </div>

  <div class="field">
    <%= form.label :minutos %>
    <%= form.number_field :minuts %>
  </div>

  <div clas="field">
    <label> Plano Utilizado:</label>
    <%= form.select :plan_id, collection: [['Nenhum', '01'], ['FaleMais30', '30'], ['FaleMais 60', '60'], ['FaleMais 120', '60']] %>


  </div>


  <div class="actions">
    <%= form.submit 'Enviar', class: 'ui right floated button blue large' %>
  </div>
<% end %>
